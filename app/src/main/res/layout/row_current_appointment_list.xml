<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mainRelative"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp">
        <com.chauthai.swipereveallayout.SwipeRevealLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dragEdge="right"
            app:mode="same_level">
            <LinearLayout
                android:id="@+id/cancel_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#FFFD3A3C">
                <TextView
                    android:id="@+id/swipe_layout"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:background="#FFFD3A3C"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/tv_chat"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:background="#929292"
                    android:gravity="center"
                    android:text="Chat"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <!--<FrameLayout-->
                <!--android:id="@+id/front_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@color/white">-->
                <RelativeLayout
                    android:id="@+id/reParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/no_image"
                        app:civ_border_color="#fff"
                        app:civ_border_width="2dp"/>
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/profileImage"
                        android:text="Hello Shahzeb "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvServices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_toEndOf="@+id/profileImage"
                        android:text="Services "
                        android:textColor="#929292"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvServices"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_toEndOf="@+id/profileImage"
                        android:text="Adresss"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />
                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvAddress"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#939393" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewLine"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:drawableStart="@drawable/date_img"
                            android:gravity="center"
                            android:paddingStart="@dimen/_20sdp"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:text="22-11-2018"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp" />
                        <View
                            android:id="@+id/viewMid"
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:background="#939393" />
                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:drawableStart="@drawable/time_img"
                            android:gravity="center"
                            android:paddingEnd="@dimen/_20sdp"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:text="11:00AM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp" />
                    </RelativeLayout>

                </RelativeLayout>




            <!--</FrameLayout>-->
        </com.chauthai.swipereveallayout.SwipeRevealLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>